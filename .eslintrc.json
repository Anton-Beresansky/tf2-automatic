{
    "env": {
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "plugins": ["node"],
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-process-exit": [
            "off"
        ],
        "node/no-extraneous-require": [
            "off"
        ],
        "node/no-deprecated-api": [
            "error"
        ],
        "node/process-exit-as-throw": [
            "error"
        ]
    }
}